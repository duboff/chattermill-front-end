<section>
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <form {{action 'authenticate' on='submit'}}>
      <fieldset>
        <h2>Please Sign In</h2>
        <hr class="colorgraph">
        <div class="form-group">
          {{input value=identification placeholder='Enter Login' type='email' id="email" class="form-control input-lg"}}
        </div>
        <div class="form-group">
          {{input value=password placeholder='Enter Password' type='password' id="password" class="form-control input-lg"}}
        </div>
        <span class="button-checkbox">
          <button class="btn">Remember Me</button>
          <a href="#" class='btn btn-link pull-right'>Forgot password?</a>
        </span>
        <hr class="colorgraph">
        <div class="form-group">
          <div class="col-xs-6 col-sm-6 col-md-6">
            <button type="submit" class='btn btn-lg btn-success btn-block' id='sign_in'>Login</button>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6">
            {{#link-to 'signup' class="btn btn-primary btn-block btn-lg"}}Register{{/link-to}}
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</section>